{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "api/v1/orders/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "soa-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "api/products/{**catch-all}"
        }
      }
    },
    "Authorization": {
      "Header": "Authorization"
    },
    "Clusters": {
      "order-cluster": {
        "Destinations": {
          "order-service": {
            "Address": "https://localhost:5002/"
          }
        }
      },
      "soa-cluster": {
        "Destinations": {
          "soa-service": {
            "Address": "https://localhost:5000/"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-service": {
            "Address": "https://localhost:5001/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
